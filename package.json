{
    "name": "tdd-spotify-wrapper",
    "version": "1.0.1",
    "description": "A wrapper to work with the Spotify Web API",
    "main": "lib/index.js",
    "scripts": {
        "clear": "rimraf lib",
        "build": "npm run clear && babel --out-dir lib src",
        "build:watch": "npm run build -- --watch",
        "build:umd": "webpack --output-filename spotify-wrapper.umd.js",
        "build:umd:min": "webpack --output-filename spotify-wrapper.umd.min.js -p",
        "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
        "lint": "./node_modules/.bin/eslint src/*.js",
        "test": "mocha tests/**/*.spec.js --require babel-register",
        "test:tdd": "mocha tests/**/*.spec.js --require babel-register --watch",
        "test:coverage": "nyc npm test",
        "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
    },
    "files": [
        "dist",
        "lib"
    ],
    "nyc": {
        "functions": 80,
        "lines": 80,
        "check-coverage": true,
        "reporter": [
            "text",
            "html"
        ],
        "exclude": [
            "tests/**"
        ]
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint && npm run test:coverage"
        }
    },
    "keywords": [
        "js",
        "tdd"
    ],
    "author": "Natan Severo <natanseverolp@gmail.com> (https://twitter.com/natan_severo)",
    "license": "MIT",
    "dependencies": {
        "node-fetch": "^2.2.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-loader": "^7.0.0",
        "babel-preset-env": "1.3.2",
        "babel-register": "6.24.0",
        "chai": "3.2.0",
        "coveralls": "^3.0.2",
        "eslint": "^5.6.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-chai-friendly": "^0.4.1",
        "eslint-plugin-import": "^2.14.0",
        "husky": "^1.0.0-rc.15",
        "mocha": "3.2.0",
        "nyc": "^13.0.1",
        "rimraf": "^2.6.2",
        "sinon": "2.1.0",
        "sinon-chai": "2.9.0",
        "sinon-stub-promise": "4.0.0",
        "webpack": "^2.4.1"
    }
}
